<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDisplay"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnSoma"
        android:layout_alignEnd="@+id/btnSoma" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:id="@+id/btn1"
        android:layout_marginTop="77dp"
        android:elegantTextHeight="true"
        android:enabled="true"
        android:clickable="true"
        android:layout_below="@+id/txtDisplay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="insereNumero" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:id="@+id/btn2"
        android:elegantTextHeight="true"
        android:layout_alignTop="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:onClick="insereNumero" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:id="@+id/btn3"
        android:elegantTextHeight="true"
        android:layout_alignTop="@+id/btn2"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:onClick="insereNumero" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:id="@+id/btn4"
        android:elegantTextHeight="true"
        android:layout_below="@+id/btn1"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:onClick="insereNumero" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5"
        android:id="@+id/btn5"
        android:elegantTextHeight="true"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:onClick="insereNumero" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:id="@+id/btn6"
        android:elegantTextHeight="true"
        android:layout_below="@+id/btn3"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:onClick="insereNumero" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:id="@+id/btn7"
        android:elegantTextHeight="true"
        android:layout_below="@+id/btn4"
        android:layout_alignLeft="@+id/btn4"
        android:layout_alignStart="@+id/btn4"
        android:onClick="insereNumero" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8"
        android:id="@+id/btn8"
        android:elegantTextHeight="true"
        android:layout_below="@+id/btn4"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:onClick="insereNumero" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="9"
        android:id="@+id/btn9"
        android:elegantTextHeight="true"
        android:layout_below="@+id/btn5"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:onClick="insereNumero" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="0"
        android:id="@+id/btn0"
        android:elegantTextHeight="true"
        android:layout_below="@+id/btn8"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:onClick="insereNumero" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+"
        android:id="@+id/btnSoma"
        android:elegantTextHeight="true"
        android:layout_alignTop="@+id/btn3"
        android:layout_toRightOf="@+id/btn3"
        android:layout_toEndOf="@+id/btn3"
        android:onClick="clickOperador" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="-"
        android:id="@+id/btnSubtracao"
        android:elegantTextHeight="true"
        android:layout_below="@+id/btn3"
        android:layout_toRightOf="@+id/btn6"
        android:layout_toEndOf="@+id/btn6"
        android:onClick="clickOperador" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="*"
        android:id="@+id/btnMultiplicacao"
        android:elegantTextHeight="true"
        android:layout_below="@+id/btn6"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:onClick="clickOperador" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="="
        android:id="@+id/btnIgual"
        android:elegantTextHeight="true"
        android:layout_below="@+id/btn8"
        android:layout_toRightOf="@+id/btn0"
        android:layout_toEndOf="@+id/btn0"
        android:onClick="clickOperador" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="/"
        android:id="@+id/btnDivisao"
        android:elegantTextHeight="true"
        android:layout_below="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:onClick="clickOperador" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text=","
        android:id="@+id/btnClear"
        android:elegantTextHeight="true"
        android:layout_below="@+id/btn7"
        android:layout_toLeftOf="@+id/btn0"
        android:layout_toStartOf="@+id/btn0"
        android:onClick="insereNumero" />

    <Button
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:text="Limpar"
        android:id="@+id/btnLimpa"
        android:elegantTextHeight="true"
        android:layout_below="@+id/btn0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="limpar" />

</RelativeLayout>
