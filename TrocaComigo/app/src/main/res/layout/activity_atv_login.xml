<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ifsul.pdm.felipe.trocacomigo.atvLogin">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center"
        android:src="@drawable/back_login_3"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55000000"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etEmailLogin"
                android:hint="Email"
                android:background="#88ffffff"
                android:minHeight="50dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:text="luke@sw.com" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/etPasswordLogin"
                android:hint="Senha"
                android:background="#88ffffff"
                android:minHeight="50dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:singleLine="true"
                android:text="1234" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:id="@+id/btnLogin"
                android:background="#cc00A8C6"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:onClick="btnLoginClick" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Criar conta"
                android:id="@+id/btnRegister"
                android:background="#00000000"
                android:textColor="#FFFFFFFF"
                android:elegantTextHeight="false"
                android:onClick="btnCreateAccountCLick" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_gravity="left|top"
        android:src="@drawable/ic_txt_logo"
        android:scaleType="fitStart" />
</FrameLayout>
